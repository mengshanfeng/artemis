parameter L, M, N;
iterator k, j, i;
double in[L,M,N], out[L,M,N];
double a, b, h2inv;

copyin in, out, t, h2inv, a, b;

stencil jacobi (out, in, h2inv, a, b) {
 double c = b * h2inv;
 double d = c * 0.5;
 double e = c * 0.125;
 double f = c * 0.3;

 gmem in, out;
 out[k][j][i] = a*in[k][j][i] -
                d*(in[k-1][j-1][i-1] +
                   in[k-1][j-1][i+1] +
                   in[k-1][j+1][i-1] +
                   in[k-1][j+1][i+1] +
                   in[k+1][j-1][i-1] +
                   in[k+1][j-1][i+1] +
                   in[k+1][j+1][i-1] +
                   in[k+1][j+1][i+1]) +
                e*(in[k-1][j-1][i] +
                   in[k-1][j][i-1] +
                   in[k-1][j][i+1] +
                   in[k-1][j+1][i] +
                   in[k][j-1][i-1] +
                   in[k][j-1][i+1] +
                   in[k][j+1][i-1] +
                   in[k][j+1][i+1] +
                   in[k+1][j-1][i] +
                   in[k+1][j][i-1] +
                   in[k+1][j][i+1] +
                   in[k+1][j+1][i]) +
                f*(in[k-1][j][i] +
                   in[k][j-1][i] +
                   in[k][j][i-1] +
                   in[k][j][i+1] +
                   in[k][j+1][i] +
                   in[k+1][j][i]) +
                0.13*in[k][j][i];
}

jacobi (out, in, h2inv, a, b);
jacobi (in, out, h2inv, a, b);

copyout in;
